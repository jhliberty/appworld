<section id="main">
  <h2>Dashboard</h2>
  <table>
   <% @uploads.each do |upload| %>
     <tr>
       <% if upload.filename %>
         <td><%= upload.filename %></td>
       <% else %>
         <td><%= upload.original_filename %></td>
       <% end %>
       <td><%= link_to "Download", download_url_for(upload.original_filename), :class => "btn" %></td>
       <td><%= link_to "Edit", edit_upload_path(upload), :class => "btn" %></td>
       <td><%= link_to "Delete", delete_path(upload.id), :confirm => 'Are you sure you want to delete ' + upload.original_filename + '?', :class => "btn danger" %></td>
     </tr>
   <% end %>
  </table>
</section>
